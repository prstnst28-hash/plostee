<% layout('layout', { title: 'Dashboard' }) %>
<h1 class="h1">Your submissions</h1>

<div class="list">
  <% if (!plugins || plugins.length === 0) { %>
    <div class="muted">You have no submissions yet. <a href="/plugins/new">Publish one →</a></div>
  <% } %>
  <% (plugins || []).forEach(p => { %>
    <div class="card">
      <img class="icon" src="<%= p.icon || '/placeholder.svg' %>" />
      <div class="grow">
        <div class="title"><%= p.title %></div>
        <div class="desc"><%= p.shortdesc %></div>
        <div class="tiny">
          Status: <strong><%= p.status %></strong>
          <% if (p.reject_reason) { %>
            <span class="muted"> — Reason: <%= p.reject_reason %></span>
          <% } %>
        </div>
      </div>
      <div class="actions">
        <a class="btn" href="/plugins/<%= p.id %>">Open</a>
      </div>
    </div>
  <% }) %>
</div>
