<section class="max-w-md mx-auto px-4 py-12">
  <h1 class="text-2xl font-bold text-white">Create account</h1>
  <% if (error) { %>
    <div class="mt-3 rounded-md bg-red-900/40 border border-red-800 text-red-200 px-3 py-2"><%= error %></div>
  <% } %>

  <form method="post" action="/register" class="mt-6 space-y-4">
    <div>
      <label class="block text-sm text-zinc-300 mb-1">Username (optional)</label>
      <input name="username"
             class="w-full rounded-md bg-zinc-900 border border-zinc-800 px-3 py-2 text-zinc-100 focus:outline-none focus:ring-2 focus:ring-brand-600">
    </div>
    <div>
      <label class="block text-sm text-zinc-300 mb-1">Email</label>
      <input name="email" type="email" required
             class="w-full rounded-md bg-zinc-900 border border-zinc-800 px-3 py-2 text-zinc-100 focus:outline-none focus:ring-2 focus:ring-brand-600">
    </div>
    <div>
      <label class="block text-sm text-zinc-300 mb-1">Password</label>
      <input name="password" type="password" required
             class="w-full rounded-md bg-zinc-900 border border-zinc-800 px-3 py-2 text-zinc-100 focus:outline-none focus:ring-2 focus:ring-brand-600">
    </div>

    <button class="w-full px-4 py-2 rounded-md bg-brand-600 hover:bg-brand-700 font-semibold transition">Create account</button>
  </form>

  <p class="mt-4 text-sm text-zinc-400">
    Already have an account? <a href="/login" class="text-zinc-200 underline">Login</a>
  </p>
</section>
