<section class="plugins-section">
  <div class="container">
    <div class="section-header">
      <h1 class="section-title">My Plugins</h1>
      <a href="/publish" class="btn btn-primary">
        <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Publish New Plugin
      </a>
    </div>

    <% if (!plugins || plugins.length === 0) { %>
      <div class="text-center" style="padding: var(--spacing-2xl); color: var(--text-muted);">
        <svg width="64" height="64" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="margin: 0 auto var(--spacing-md); opacity: 0.5;">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
        <h3 class="h3">No plugins yet</h3>
        <p style="margin-bottom: var(--spacing-lg);">Start sharing your amazing Minecraft plugins with the community!</p>
        <a href="/publish" class="btn btn-primary btn-lg">
          <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          Publish Your First Plugin
        </a>
      </div>
    <% } else { %>
      <div class="plugins-grid">
        <% plugins.forEach(p => { %>
          <div class="plugin-card">
            <div class="plugin-version">v1.0.0</div>
            <div class="plugin-header">
              <img src="/placeholder.svg" alt="<%= p.name %>" class="plugin-icon" />
              <div class="plugin-info">
                <a href="/plugins/<%= p.id || '#' %>" class="plugin-title"><%= p.name %></a>
                <div class="plugin-author">by You</div>
              </div>
            </div>
            <p class="plugin-description"><%= p.description %></p>
            <div class="plugin-tags">
              <span class="plugin-tag">Your Plugin</span>
            </div>
            <div class="plugin-stats">
              <div class="plugin-stat">
                <svg class="plugin-stat-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <%= new Date(p.created_at).toLocaleDateString() %>
              </div>
              <div class="plugin-stat">
                <% if (p.link) { %>
                  <a href="<%= p.link %>" target="_blank" rel="noopener noreferrer" class="btn btn-secondary" style="font-size: 0.75rem; padding: 0.25rem 0.5rem;">
                    <svg width="14" height="14" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                    </svg>
                    View Download
                  </a>
                <% } else { %>
                  <span style="color: var(--text-muted); font-size: 0.75rem;">No download link</span>
                <% } %>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>
</section>
