<section class="max-w-6xl mx-auto px-4 py-12">
  <div class="flex items-center justify-between">
    <h1 class="text-2xl font-bold text-white">My Plugins</h1>
    <a href="/publish" class="px-4 py-2 rounded-md bg-brand-600 hover:bg-brand-700 transition">Publish</a>
  </div>

  <% if (!plugins || plugins.length === 0) { %>
    <div class="mt-6 text-zinc-400">No plugins yet. Publish your first one!</div>
  <% } else { %>
    <div class="mt-6 grid sm:grid-cols-2 lg:grid-cols-3 gap-5">
      <% plugins.forEach(p => { %>
        <div class="rounded-xl border border-zinc-800 bg-zinc-900/60 p-5">
          <h3 class="font-semibold text-white"><%= p.name %></h3>
          <p class="text-zinc-400 text-sm mt-1"><%= p.description %></p>
          <div class="mt-3 text-xs text-zinc-500"><%= new Date(p.created_at).toLocaleString() %></div>
          <div class="mt-4">
            <% if (p.link) { %>
              <a href="<%= p.link %>" target="_blank" rel="noopener noreferrer"
                 class="inline-flex items-center gap-2 px-3 py-1.5 rounded-md bg-zinc-800 hover:bg-zinc-700 text-sm">
                Open Link
              </a>
            <% } else { %>
              <span class="text-zinc-500 text-sm">No link</span>
            <% } %>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</section>
