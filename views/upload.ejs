<section class="max-w-2xl mx-auto px-4 py-12">
  <h1 class="text-2xl font-bold text-white">Publish a Plugin</h1>
  <p class="text-zinc-400 mt-1 text-sm">Provide metadata and an external download link.</p>

  <% if (error) { %>
    <div class="mt-3 rounded-md bg-red-900/40 border border-red-800 text-red-200 px-3 py-2"><%= error %></div>
  <% } %>

  <form method="post" action="/publish" class="mt-6 space-y-4">
    <div>
      <label class="block text-sm text-zinc-300 mb-1">Plugin name</label>
      <input name="name" required
             class="w-full rounded-md bg-zinc-900 border border-zinc-800 px-3 py-2 text-zinc-100 focus:outline-none focus:ring-2 focus:ring-brand-600">
    </div>
    <div>
      <label class="block text-sm text-zinc-300 mb-1">Short description</label>
      <textarea name="description" rows="4" required
                class="w-full rounded-md bg-zinc-900 border border-zinc-800 px-3 py-2 text-zinc-100 focus:outline-none focus:ring-2 focus:ring-brand-600"></textarea>
    </div>
    <div>
      <label class="block text-sm text-zinc-300 mb-1">External download link (Modrinth/Spigot/GitHub)</label>
      <input name="link" type="url" placeholder="https://..."
             class="w-full rounded-md bg-zinc-900 border border-zinc-800 px-3 py-2 text-zinc-100 focus:outline-none focus:ring-2 focus:ring-brand-600">
    </div>

    <button class="px-5 py-2.5 rounded-md bg-brand-600 hover:bg-brand-700 font-semibold transition">Submit</button>
  </form>
</section>
