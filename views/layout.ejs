        <ul class="navbar-nav">
          <li><a href="/" class="<%= typeof title !== 'undefined' && title === 'Home' ? 'active' : '' %>">Home</a></li>
          <li><a href="/plugins" class="<%= typeof title !== 'undefined' && title.includes('Plugin') ? 'active' : '' %>">Browse</a></li>
          <li><a href="/publish" class="<%= typeof title !== 'undefined' && title === 'Publish' ? 'active' : '' %>">Publish</a></li>
          <% if (user) { %>
            <li><a href="/my" class="<%= typeof title !== 'undefined' && title === 'My Plugins' ? 'active' : '' %>">My Plugins</a></li>
            <% if (user.role === 'admin' || user.role === 'moderator') { %>
              <li><a href="/moderation">Moderation</a></li>
            <% } %>
          <% } %>
        </ul>

        <div class="navbar-actions">
          <% if (!user) { %>
            <a href="/login" class="btn btn-secondary">Login</a>
            <a href="/register" class="btn btn-primary">Sign Up</a>
          <% } else { %>
            <span class="text-small text-secondary">Hi, <%= user.name || user.username || user.email.split('@')[0] %></span>
            <a href="/dashboard" class="btn btn-secondary">Dashboard</a>
            <a href="/logout" class="btn btn-outline">Logout</a>
          <% } %>
        </div>
      </div>
    </div>
  </nav>

