<!-- Hero Section -->
<section class="hero">
  <div class="container">
    <div class="hero-content fade-in-up">
      <h1 class="hero-title">
        Share your <span style="color: var(--primary);">Minecraft plugins</span> with the world
      </h1>
      <p class="hero-subtitle">
        The modern platform for Minecraft plugin developers. Publish, discover, and share plugins with a thriving community of server owners and developers.
      </p>
      <div class="flex gap-md justify-center" style="margin-bottom: var(--spacing-xl);">
        <% if (!user) { %>
          <a href="/register" class="btn btn-primary btn-lg">
            <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
            Get Started
          </a>
          <a href="/login" class="btn btn-outline btn-lg">Browse Plugins</a>
        <% } else { %>
          <a href="/publish" class="btn btn-primary btn-lg">
            <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            Publish Plugin
          </a>
          <a href="/my" class="btn btn-outline btn-lg">My Dashboard</a>
        <% } %>
      </div>
      
      <div class="hero-stats">
        <div class="hero-stat">
          <span class="hero-stat-number">1,247</span>
          <span class="hero-stat-label">Plugins</span>
        </div>
        <div class="hero-stat">
          <span class="hero-stat-number">2.1M</span>
          <span class="hero-stat-label">Downloads</span>
        </div>
        <div class="hero-stat">
          <span class="hero-stat-number">15.3K</span>
          <span class="hero-stat-label">Developers</span>
        </div>
        <div class="hero-stat">
          <span class="hero-stat-number">98.7%</span>
          <span class="hero-stat-label">Uptime</span>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Search Section -->
<section class="search-section">
  <div class="container">
    <div class="search-container">
      <div class="search-box">
        <svg class="search-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
        </svg>
        <input type="text" class="search-input" placeholder="Search plugins, authors, or categories..." />
      </div>
      
      <div class="search-filters">
        <a href="#" class="filter-tag active">All</a>
        <a href="#" class="filter-tag">Utility</a>
        <a href="#" class="filter-tag">Economy</a>
        <a href="#" class="filter-tag">PvP</a>
        <a href="#" class="filter-tag">Admin Tools</a>
        <a href="#" class="filter-tag">Fun</a>
        <a href="#" class="filter-tag">World Management</a>
        <a href="#" class="filter-tag">API</a>
      </div>
    </div>
  </div>
</section>

