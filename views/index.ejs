<!-- Recent Plugins Section -->
<section class="plugins-section">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">ðŸ†• Recently Added</h2>
      <a href="/plugins?sort=newest" class="view-all-link">
        View All
        <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
      </a>
    </div>

    <% if (!plugins || plugins.length === 0) { %>
      <div class="text-center" style="padding: var(--spacing-2xl); color: var(--text-muted);">
        <svg width="64" height="64" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="margin: 0 auto var(--spacing-md);">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
        </svg>
        <h3 class="h3">No plugins yet</h3>
        <p>Be the first to share your amazing Minecraft plugin with the community!</p>
        <a href="/publish" class="btn btn-primary" style="margin-top: var(--spacing-md);">Publish First Plugin</a>
      </div>
    <% } else { %>
      <div class="plugins-grid">
        <% plugins.forEach(p => { %>
          <div class="plugin-card">
            <div class="plugin-version">v1.0.0</div>
            <div class="plugin-header">
              <img src="/placeholder.svg" alt="<%= p.name %>" class="plugin-icon" />
              <div class="plugin-info">
                <a href="/plugins/<%= p.id || '#' %>" class="plugin-title"><%= p.name %></a>
                <div class="plugin-author">by <%= p.username || 'Unknown' %></div>
              </div>
            </div>
            <p class="plugin-description"><%= p.description %></p>
            <div class="plugin-tags">
              <span class="plugin-tag">New</span>
              <span class="plugin-tag">Utility</span>
            </div>
            <div class="plugin-stats">
              <div class="plugin-stat">
                <svg class="plugin-stat-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
                <% if (p.link) { %>
                  <a href="<%= p.link %>" target="_blank" rel="noopener noreferrer" style="color: var(--primary);">Download</a>
                <% } else { %>
                  No download
                <% } %>
              </div>
              <div class="plugin-stat">
                <svg class="plugin-stat-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <%= new Date(p.created_at).toLocaleDateString() %>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>
</section>
